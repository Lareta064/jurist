mixin schemeCard(num, title, text)
	.scheme-card
		p.scheme-card-num #{num}.
		p.scheme-card-title #{title}
		p.scheme-card-text !{text}

mixin newCard(data, hasTag, title)
	.col-md-6.col-lg-4
		a(href="#!").news-card
			.news-card-head
				span #{data}
				span ##{hasTag}
			h4 #{title}
			p.news-link Читать
